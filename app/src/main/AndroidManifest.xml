<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apps.sayan.onlinepetition">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar.BlackSystemBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewPetitionActivity"
            android:label="@string/title_activity_view_petition"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="apps.sayan.onlinepetition.MainActivity" />
        </activity>
        <activity
            android:name=".WritePetitionActivity"
            android:label="@string/title_activity_write_petition"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="apps.sayan.onlinepetition.MainActivity" />
        </activity>
        <activity
            android:name=".SignActivity"
            android:label="@string/title_activity_sign"
            android:parentActivityName=".ViewPetitionActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="apps.sayan.onlinepetition.ViewPetitionActivity" />
        </activity>
    </application>

</manifest>