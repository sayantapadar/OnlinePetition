<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.FitWindowsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/drawer_width"
    android:layout_height="190dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/drawer_back"
        android:id="@+id/header_cover_picture"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        android:id="@+id/header_profile_picture"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="70dp"
        app:border_color="@color/darkTransparent"
        app:border_width="1dp"
        android:src="@drawable/dp_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sayan Tapadar"
        android:textSize="14sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:id="@+id/username"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="saytap.tapadar5@gmail.com"
        android:id="@+id/email"
        android:gravity="left"
        android:layout_marginTop="168dp"
        android:textSize="14sp"
        android:textColor="#fff"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"/>
    <Button
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:drawable/ic_menu_edit"
        android:id="@+id/header_login"
        android:layout_marginStart="240dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="155dp"/>
</android.support.v7.widget.FitWindowsFrameLayout>